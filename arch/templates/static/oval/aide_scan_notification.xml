<def-group>
  <definition class="compliance" id="aide_scan_notification" version="1">
    <metadata>
      <title>Configure Notification of Post-AIDE Scan Details</title>
      <affected family="unix">
        <platform>Arch Linux</platform>
      </affected>
      <description>AIDE should notify appropriate personnel of the details
      of a scan after the scan has been run.</description>
    </metadata>
    <criteria operator="AND">
      <extend_definition comment="notify personnel when aide completes" definition_ref="service_perform-aide-check_enabled" />
      <criterion comment="notify personnel when aide completes" test_ref="test_aide_periodic_systemd_notifying_service" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="notify personnel when aide completes" id="test_aide_periodic_systemd_notifying_service" version="1">
    <ind:object object_ref="object_test_aide_scan_notification" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object comment="notify personnel when aide completes" id="object_test_aide_scan_notification" version="1">
    <ind:filepath>/etc/systemd/system/perform-aide-check.service</ind:filepath>
    <ind:pattern operation="pattern match">^ExecStart=.*/usr/s?bin/aide[\s]*\-\-check.*\|.*/(?:|usr/)bin/mail[\s]*-s[\s]*".*"[\s]*root@.*$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
