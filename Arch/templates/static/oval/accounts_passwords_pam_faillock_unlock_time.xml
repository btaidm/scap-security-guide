<def-group>
  <definition class="compliance" id="accounts_passwords_pam_faillock_unlock_time" version="2">
    <metadata>
      <title>Lock out account after failed login attempts</title>
      <affected family="unix">
        <platform>Arch Linux</platform>
      </affected>
      <description>The number of allowed failed logins should be set correctly.</description>
    </metadata>
    <criteria operator="OR">
      <criteria operator="AND">
        <criterion comment="check for unlock_time is never" test_ref="test_accounts_passwords_pam_faillock_unlock_time_never" />
        <criterion comment="preauth default is set to 604800" test_ref="test_accounts_passwords_pam_tally2_unlock_time_system-auth-never" />
      </criteria>
      <criterion comment="preauth default is set to 604800" test_ref="test_accounts_passwords_pam_tally2_unlock_time_system-auth" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="check preauth maximum failed login attempts allowed in /etc/pam.d/system-auth" id="test_accounts_passwords_pam_tally2_unlock_time_system-auth" version="2">
    <ind:object object_ref="object_accounts_passwords_pam_tally2_unlock_time_system-auth" />
    <ind:state state_ref="state_accounts_passwords_pam_tally2_unlock_time_system-auth" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_accounts_passwords_pam_tally2_unlock_time_system-auth" version="2">
    <ind:filepath>/etc/pam.d/system-auth</ind:filepath>
    <ind:pattern operation="pattern match">^\s*auth\s+(?:(?:required))\s+pam_tally2\.so\s+.*unlock_time=([a-z0-9]*).*$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_state id="state_accounts_passwords_pam_tally2_unlock_time_system-auth" version="2">
    <ind:subexpression datatype="string" operation="equals" var_ref="var_accounts_passwords_pam_faillock_unlock_time" />
  </ind:textfilecontent54_state>



  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="check preauth maximum failed login attempts allowed in /etc/pam.d/system-auth" id="test_accounts_passwords_pam_tally2_unlock_time_system-auth-never" version="2">
    <ind:object object_ref="object_accounts_passwords_pam_tally2_unlock_time_system-auth-never" />
  </ind:textfilecontent54_test>

  <ind:textfilecontent54_object id="object_accounts_passwords_pam_tally2_unlock_time_system-auth-never" version="2">
    <ind:filepath>/etc/pam.d/system-auth</ind:filepath>
    <ind:pattern operation="pattern match">^\s*auth\s+(?:(?:required))\s+pam_tally2\.so\s+(?:(?!unlock_time).)*$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>


  <ind:variable_test check="all" id="test_accounts_passwords_pam_faillock_unlock_time_never" version="2" comment="check unlock_time is never">
    <ind:object object_ref="object_accounts_passwords_pam_faillock_unlock_time_never"/>
    <ind:state state_ref="state_accounts_passwords_pam_faillock_unlock_time_never"/>
  </ind:variable_test>

  <ind:variable_object id="object_accounts_passwords_pam_faillock_unlock_time_never" version="2">
    <ind:var_ref>var_accounts_passwords_pam_faillock_unlock_time</ind:var_ref>
  </ind:variable_object>

  <ind:variable_state id="state_accounts_passwords_pam_faillock_unlock_time_never" version="2">
    <ind:value>never</ind:value>
  </ind:variable_state>

  <external_variable comment="number of failed login attempts allowed" datatype="string" id="var_accounts_passwords_pam_faillock_unlock_time" version="2" />
</def-group>
