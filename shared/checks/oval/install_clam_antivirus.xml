<def-group>
  <definition class="compliance" id="install_clam_antivirus"
  version="1">
    <metadata>
      <title>Package Clam A/V Installed</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <description>McAfee Antivirus software should be installed.</description>
    </metadata>
    <criteria>
      <criterion comment="package clamav is installed"
      test_ref="test_package_clamav_installed" />
    </criteria>
  </definition>

  <linux:rpminfo_test check="all" check_existence="all_exist"
  id="test_package_clamav_installed" version="1"
  comment="package clamav is installed">
    <linux:object object_ref="obj_package_clamav_installed" />
  </linux:rpminfo_test>
  <linux:rpminfo_object id="obj_package_clamav_installed" version="1">
    <linux:name>clamav</linux:name>
  </linux:rpminfo_object>
</def-group>
