<def-group>
  <definition class="compliance" id="ensure_gpgcheck_local_packages" version="1">
    <metadata>
      <title>Ensure gpg Locally Activated</title>
      <affected family="unix">
        <platform>multi_platform_archlinux</platform>
      </affected>
      <description>The gpg option should be used to ensure that checking
      of an RPM package's signature always occurs prior to its
      installation.</description>
    </metadata>
    <criteria>
      <criterion comment="check value of gpg in /etc/pacman.conf" test_ref="test_pacman_ensure_gpg_locally_activated" />
    </criteria>
  </definition>
  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="check value of gpg in /etc/pacman.conf" id="test_pacman_ensure_gpg_locally_activated" version="1">
    <ind:object object_ref="object_pacman_ensure_gpg_locally_activated" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_pacman_ensure_gpg_locally_activated" comment="gpg set in /etc/pacman.conf" version="1">
    <ind:filepath>/etc/pacman.conf</ind:filepath>
    <ind:pattern operation="pattern match">^\s*LocalFileSigLevel\s*=.*\sRequired.*$</ind:pattern>
    <ind:instance datatype="int" operation="equals">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
