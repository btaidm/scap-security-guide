<def-group>
  <definition class="compliance" id="aide_periodic_cron_checking" version="3">
    <metadata>
      <title>Configure Periodic Execution of AIDE</title>
      <affected family="unix">
        <platform>multi_platform_archlinux</platform>
      </affected>
      <description>By default, AIDE does not install itself for periodic
      execution. Periodically running AIDE is necessary to reveal
      unexpected changes in installed files.
      </description>
    </metadata>
    <criteria operator="AND">
      <extend_definition comment="run aide daily with systemd" definition_ref="service_perform-aide-check_enabled" />
      <criterion comment="run aide daily with systemd" test_ref="test_aide_periodic_systemd_checking_service" />
      <criterion comment="run aide daily with systemd.(daily|weekly|monthly)" test_ref="test_aide_periodic_systemd_checking_timer" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="run aide daily with systemd" id="test_aide_periodic_systemd_checking_service" version="1">
    <ind:object object_ref="object_test_aide_periodic_systemd_checking_service" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object comment="run aide daily with systemd" id="object_test_aide_periodic_systemd_checking_service" version="1">
    <ind:filepath>/etc/systemd/system/aide.service</ind:filepath>
    <ind:pattern operation="pattern match">^ExecStart=.*/usr/s?bin/aide[\s]*\-\-check.*$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>

  <ind:textfilecontent54_test check="all" check_existence="all_exist" comment="run aide daily with systemd" id="test_aide_periodic_systemd_checking_timer" version="1">
    <ind:object object_ref="object_test_aide_periodic_systemd_checking_timer" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object comment="run aide daily with systemd" id="object_test_aide_periodic_systemd_checking_timer" version="1">
    <ind:filepath>/etc/systemd/system/aide.timer</ind:filepath>
    <ind:pattern operation="pattern match">^OnCalendar=daily$</ind:pattern>
    <ind:instance datatype="int" operation="greater than or equal">1</ind:instance>
  </ind:textfilecontent54_object>
</def-group>
