<def-group>
  <definition class="compliance" id="install_clam_antivirus"
  version="1">
    <metadata>
      <title>Package Clam A/V Installed</title>
      <affected family="unix">
        <platform>multi_platform_archlinux</platform>
      </affected>
      <description>ClamAV Antivirus software should be installed.</description>
    </metadata>
    <criteria>
      <criterion comment="package clamav is installed"
      test_ref="test_package_clamav_installed" />
    </criteria>
  </definition>

  <file_test check="all" check_existence="at_least_one_exists" comment="package clamav is installed" id="test_package_clamav_installed" version="1" xmlns="http://oval.mitre.org/XMLSchema/oval-definitions-5#unix">
    <object object_ref="obj_package_clamav_installed"/>
  </file_test>
  <file_object id="obj_package_clamav_installed" version="1" xmlns="http://oval.mitre.org/XMLSchema/oval-definitions-5#unix">
    <filepath operation="pattern match">^/var/lib/pacman/local/clamav-[^/]+/files$</filepath>
  </file_object>
</def-group>
