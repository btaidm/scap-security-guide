<def-group>
  <definition class="compliance" id="bootloader_no_removeable_media" version="1">
    <metadata>
      <title>Set Boot Loader Password</title>
      <affected family="unix">
        <platform>multi_platform_archlinux</platform>
      </affected>
      <description>The grub boot loader should not boot from removable media</description>
    </metadata>
    <criteria operator="OR">
      <criterion comment="Pass if /boot/grub/grub.cfg does not exist" test_ref="test_bootloader_rmmedia_grub_cfg" />
      <criterion comment="make sure a superuser is defined in /boot/grub/grub.cfg" test_ref="test_bootloader_no_non_hd"/>
    </criteria>
  </definition>

   <unix:file_test check="all" check_existence="none_exist" comment="/boot/grub/grub.cfg does not exist" id="test_bootloader_rmmedia_grub_cfg" version="1">
    <unix:object object_ref="object_bootloader_rmmedia_grub_cfg" />
  </unix:file_test>
  <unix:file_object id="object_bootloader_rmmedia_grub_cfg" version="1">
    <unix:filepath>/boot/grub/grub.cfg</unix:filepath>
  </unix:file_object>

  <ind:textfilecontent54_test check="all" check_existence="none_exist" comment="root is defined in /boot/grub/grub.cfg files. root is only hd[:digit:]" id="test_bootloader_no_non_hd" version="1">
    <ind:object object_ref="object_bootloader_root" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="object_bootloader_root" version="1">
    <ind:filepath>/boot/grub/grub.cfg</ind:filepath>
    <ind:pattern operation="pattern match">^[\s]*set[\s]+root=\"(?!hd\d+).*\"$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>

</def-group>

