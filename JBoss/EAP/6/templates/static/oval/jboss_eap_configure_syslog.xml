<def-group>
  <definition version="1" class="compliance" id="jboss_eap_configure_syslog">
    <metadata>
      <title>Configure JBoss to Use Syslog</title>
      <description>EAP should be configured to export logs to syslog</description>
      <affected family="undefined">
        <platform>JBoss Enterprise Application Platform 6</platform>
      </affected>
    </metadata>
    <criteria operator="AND">
      <criterion test_ref="test_jboss_eap_configure_syslog_standalone" />
      <criteria operator="OR">
        <extend_definition definition_ref="jboss_eap_standalone_openshift_exists" negate="true" />
        <criterion test_ref="test_jboss_eap_configure_syslog_openshift" />
      </criteria>
    </criteria>
  </definition>

  <ind:environmentvariable58_object id="obj_env_configure_syslog" version="1">
    <ind:pid xsi:nil="true" datatype="int" />
    <ind:name>JBOSS_HOME</ind:name>
  </ind:environmentvariable58_object>

  <local_variable id="local_var_configure_syslog_jboss_home" version="1" datatype="string" comment="version location">
    <concat>
      <object_component object_ref="obj_env_configure_syslog" item_field="value" />
      <literal_component datatype="string">/standalone/configuration/</literal_component>
    </concat>
  </local_variable>

  <ind:xmlfilecontent_test id="test_jboss_eap_configure_syslog_standalone" version="1" check="all" comment="Check EAP for ">
    <ind:object object_ref="obj_jboss_eap_configure_syslog_logs_standalone" />
  </ind:xmlfilecontent_test>
  <ind:xmlfilecontent_object id="obj_jboss_eap_configure_syslog_logs_standalone" version="1">
    <ind:path var_ref="local_var_configure_syslog_jboss_home"/>
    <ind:filename>standalone.xml</ind:filename>
    <ind:xpath>//*[name()='server']/*[name()='profile']/*[name()='subsystem']/*[name()='syslog-handler']</ind:xpath>
  </ind:xmlfilecontent_object>

  <ind:xmlfilecontent_test id="test_jboss_eap_configure_syslog_openshift" version="1" check="all" comment="Check EAP for ">
    <ind:object object_ref="obj_jboss_eap_configure_syslog_logs_openshift" />
  </ind:xmlfilecontent_test>
  <ind:xmlfilecontent_object id="obj_jboss_eap_configure_syslog_logs_openshift" version="1">
    <ind:path var_ref="local_var_configure_syslog_jboss_home"/>
    <ind:filename>standalone-openshift.xml</ind:filename>
    <ind:xpath>//*[name()='server']/*[name()='profile']/*[name()='subsystem']/*[name()='syslog-handler']</ind:xpath>
  </ind:xmlfilecontent_object>

</def-group>
