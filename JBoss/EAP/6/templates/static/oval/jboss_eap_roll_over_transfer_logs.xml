<def-group>
  <definition version="1" class="compliance" id="jboss_eap_roll_over_transfer_logs">
    <metadata>
      <title>Configure Logs to Rollover</title>
      <description>Logger should be configured to rollover log files</description>
      <affected family="undefined">
        <platform>JBoss Enterprise Application Platform 6</platform>
      </affected>
    </metadata>
    <criteria operator="AND">
      <criterion test_ref="test_eap_roll_over_transfer_logs_standalone" />
      <criteria operator="OR">
        <extend_definition definition_ref="jboss_eap_standalone_openshift_exists" negate="true" />
        <criterion test_ref="test_eap_roll_over_transfer_logs_openshift" />
      </criteria>
    </criteria>
  </definition>

  <ind:environmentvariable58_object id="obj_env_rollover_log" version="1">
    <ind:pid xsi:nil="true" datatype="int" />
    <ind:name>JBOSS_HOME</ind:name>
  </ind:environmentvariable58_object>

  <local_variable id="local_var_rollover_jboss_home" version="1" datatype="string" comment="version location">
    <concat>
      <object_component object_ref="obj_env_rollover_log" item_field="value" />
      <literal_component datatype="string">/standalone/configuration/</literal_component>
    </concat>
  </local_variable>

  <ind:xmlfilecontent_test id="test_eap_roll_over_transfer_logs_standalone" version="1" check="all" comment="Check EAP roll over transfer logs">
    <ind:object object_ref="obj_eap_roll_over_transfer_logs_standalone" />
  </ind:xmlfilecontent_test>
  <ind:xmlfilecontent_object id="obj_eap_roll_over_transfer_logs_standalone" version="1">
    <ind:path var_ref="local_var_rollover_jboss_home"/>
    <ind:filename>standalone.xml</ind:filename>
    <ind:xpath>//*[name()='server']/*[name()='profile']/*[name()='subsystem']/*[name()='periodic-rotating-file-handler'][@name='FILE']</ind:xpath>
  </ind:xmlfilecontent_object>

  <ind:xmlfilecontent_test id="test_eap_roll_over_transfer_logs_openshift" version="1" check="all" comment="Check EAP roll over transfer logs">
    <ind:object object_ref="obj_eap_roll_over_transfer_logs_openshift" />
  </ind:xmlfilecontent_test>
  <ind:xmlfilecontent_object id="obj_eap_roll_over_transfer_logs_openshift" version="1">
    <ind:path var_ref="local_var_rollover_jboss_home"/>
    <ind:filename>standalone-openshift.xml</ind:filename>
    <ind:xpath>//*[name()='server']/*[name()='profile']/*[name()='subsystem']/*[name()='periodic-rotating-file-handler'][@name='FILE']</ind:xpath>
  </ind:xmlfilecontent_object>

</def-group>
